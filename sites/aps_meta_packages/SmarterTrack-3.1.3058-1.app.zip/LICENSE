        function doresize() {
            var height = $(window).height();
            var topheight = $("#ui-layout-north").height();
            var bottomheight = $("#ui-layout-south").height();
            var offset = 44;
            $("#ui-layout-center").height(height - topheight - bottomheight - offset);
        }
