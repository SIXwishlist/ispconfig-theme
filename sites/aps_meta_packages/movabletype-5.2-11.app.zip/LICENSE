		<!-- Purchase analytics -->
		<script type="text/javascript">
			function TrackPurchase() {
				var image = new Image(1,1);
				image.src = "//www.googleadservices.com/pagead/conversion/983504773/?value=0&amp;label=YkTnCMvPuwcQha_81AM&amp;guid=ON&amp;script=0";
			}
		</script>
		<script type="text/javascript">
			function TrackBingPurchase() {
				var image = new Image(1,1);
				image.src = "//flex.msn.com/mstag/tag/66163f90-c466-4d72-8b58-170ee5bd32a1/analytics.html?dedup=1&domainId=2549235&type=1&revenue=&actionid=155826";
			}
		</script>
		
		<!-- Contact Form analytics (for Enterprise Contact Form) -->
		<script type="text/javascript">
			function TrackContactForm() {
			var image = new Image(1,1);
			image.src = "//www.googleadservices.com/pagead/conversion/983504773/?value=0&amp;label=T4l1CMPQuwcQha_81AM&amp;guid=ON&amp;script=0";
		}
		</script>
		<script type="text/javascript">
			function TrackBingContactForm() {
