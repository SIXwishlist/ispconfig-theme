	<settings>
		<group>
			<name>Administrator's Account</name>
			<setting default-value="admin" id="admin_name" max-length="32" min-length="1" regex="^[a-zA-Z][0-9a-zA-Z_\-]*" type="string">
				<name>Administrator's Login</name>
				<error-message>Please make sure the text you entered starts with a letter and continues with either numbers, letters, underscores or hyphens.</error-message>
			</setting>
			<setting id="admin_password" type="password">
				<name>Administrator's Password</name>
			</setting>
		</group>
		<group>
			<setting default-value="SugarCRM" id="title" type="string">
				<name>System Name</name>
				<description>This name will be displayed in the browser title bar when users visit the Sugar application.</description>
			</setting>
			<setting default-value="true" id="send_usage_statistics" installation-only="true" type="enum">
				<name>Send Anonymous Usage Statistics</name>
				<description>If selected 'Yes', Sugar will send anonymous statistics about your installation to SugarCRM Inc. every time your system checks for new versions.</description>
				<choice id="true">
					<name>Yes</name>
				</choice>
				<choice id="false">
					<name>No</name>
				</choice>
			</setting>
			<setting default-value="manual" id="check_for_updates" type="enum">
				<name>Check For Updates</name>
				<description>How the system will check for updated versions of the application.</description>
				<choice id="automatic">
					<name>Automatic</name>
				</choice>
				<choice id="manual">
					<name>Manual</name>
				</choice>
			</setting>
		</group>
	</settings>

	<requirements>
		<php:version min="5.2.0" xmlns:php="http://apstandard.com/ns/1/php"/>
		<php:extension xmlns:php="http://apstandard.com/ns/1/php">mysql</php:extension>
		<php:extension xmlns:php="http://apstandard.com/ns/1/php">mbstring</php:extension>
		<php:memory-limit xmlns:php="http://apstandard.com/ns/1/php">41943040</php:memory-limit>

		<db:db xmlns:db="http://apstandard.com/ns/1/db">
			<db:id>main</db:id>
			<db:default-name>sugarce</db:default-name>
			<db:can-use-tables-prefix>false</db:can-use-tables-prefix>
			<db:server-type>mysql</db:server-type>
			<db:server-min-version>5.0</db:server-min-version>
		</db:db>
	</requirements>

